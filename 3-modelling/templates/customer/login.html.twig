{% extends 'base.html.twig' %}

{% block title %}Login - Select Customer{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0 text-center">üîê Welcome to Electronics Store</h4>
            </div>
            <div class="card-body">
                {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {% endfor %}

                <p class="text-center text-muted mb-4">Select your account to continue shopping</p>

                <form method="post" action="{{ path('login_submit') }}">
                    <div class="list-group mb-4">
                        {% for customer in customers %}
                        <label class="list-group-item list-group-item-action d-flex align-items-center">
                            <input class="form-check-input me-3" type="radio" name="customerId" 
                                   value="{{ customer.customerId }}" required>
                            <div>
                                <strong>{{ customer.name }}</strong>
                                <br>
                                <small class="text-muted">{{ customer.email }}</small>
                            </div>
                        </label>
                        {% endfor %}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Continue to Shop ‚Üí
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

