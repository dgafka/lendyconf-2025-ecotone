{% extends 'base.html.twig' %}

{% block title %}Order {{ order.orderId }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Order Details</h2>
            <div>
                <a href="{{ path('customer_orders', {customerId: customer.customerId}) }}" class="btn btn-outline-secondary me-2">
                    üì¶ Order History
                </a>
                <a href="{{ path('customer_shop', {customerId: customer.customerId}) }}" class="btn btn-primary">
                    üõçÔ∏è Continue Shopping
                </a>
            </div>
        </div>

        <div class="alert alert-success">
            <strong>‚úì Order Placed Successfully!</strong>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong>Order ID:</strong><br>
                            <code>{{ order.orderId }}</code>
                        </p>
                        <p class="mb-2">
                            <strong>Customer ID:</strong><br>
                            <code>{{ order.customerId }}</code>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong>Date:</strong><br>
                            {{ order.createdAt|date('F j, Y, g:i a') }}
                        </p>
                        <p class="mb-2">
                            <strong>Status:</strong><br>
                            {% if order.status.value == 'in_progress' %}
                                <span class="badge bg-warning text-dark">In Progress</span>
                            {% elseif order.status.value == 'completed' %}
                                <span class="badge bg-success">Completed</span>
                            {% elseif order.status.value == 'cancelled' %}
                                <span class="badge bg-danger">Cancelled</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Order Items</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in orderItems %}
                        <tr>
                            <td>
                                <strong>{{ item.product.name }}</strong>
                                <br>
                                <small class="text-muted">{{ item.product.description }}</small>
                            </td>
                            <td class="text-center">{{ item.quantity }}</td>
                            <td class="text-end">${{ (item.product.price.amount / 100)|number_format(2) }}</td>
                            <td class="text-end">${{ (item.lineTotal / 100)|number_format(2) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end"><strong>Total Price:</strong></td>
                            <td class="text-end">
                                <strong class="fs-5 text-primary">
                                    ${{ (order.totalPrice.amount / 100)|number_format(2) }} {{ order.totalPrice.currency }}
                                </strong>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

