{% extends 'base.html.twig' %}

{% block title %}Order History - {{ customer.name }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>üì¶ Order History</h2>
            <a href="{{ path('customer_shop', {customerId: customer.customerId}) }}" class="btn btn-primary">
                üõçÔ∏è Shop Now
            </a>
        </div>

        {% if orders|length == 0 %}
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No orders yet</h4>
                <p class="text-muted mb-4">Start shopping to see your order history here.</p>
                <a href="{{ path('customer_shop', {customerId: customer.customerId}) }}" class="btn btn-primary">
                    Start Shopping ‚Üí
                </a>
            </div>
        </div>
        {% else %}
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                        <tr>
                            <td>
                                <code class="small">{{ order.orderId[:8] }}...</code>
                            </td>
                            <td>{{ order.createdAt|date('M j, Y g:i A') }}</td>
                            <td>{{ order.orderLines|length }} item(s)</td>
                            <td class="text-center">
                                {% if order.status.value == 'in_progress' %}
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                {% elseif order.status.value == 'completed' %}
                                    <span class="badge bg-success">Completed</span>
                                {% elseif order.status.value == 'cancelled' %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% endif %}
                            </td>
                            <td class="text-end fw-bold">
                                ${{ (order.totalPrice.amount / 100)|number_format(2) }}
                            </td>
                            <td class="text-end">
                                <a href="{{ path('customer_order_show', {customerId: customer.customerId, orderId: order.orderId}) }}" 
                                   class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

